# ðŸ”§ Fund Transfer API - Environment Configuration Template
# Copy this file to .env and customize the values below

###> symfony/framework-bundle ###
APP_ENV=dev
APP_SECRET=your-secret-key-here
###< symfony/framework-bundle ###

###> Docker Port Configuration ###
# Change these ports if you have conflicts on your system
APP_PORT=8080                        # Web application port (http://localhost:8080)
DB_EXTERNAL_PORT=3307                # MySQL admin access port  
REDIS_EXTERNAL_PORT=6379             # Redis admin access port
###< Docker Port Configuration ###

###> Database Configuration ###
# Database connection settings
DB_HOST=db                           # Use 'db' for Docker, 'localhost' for local dev
DB_PORT=3306                         # Internal database port (don't change for Docker)
DB_NAME=fund_transfer_db             # Database name
DB_USER=root                         # Database username
DB_PASSWORD=password                 # Database password (change for production!)
DB_VERSION=8.0                       # MySQL version

# Auto-constructed DATABASE_URL (don't modify this line)
DATABASE_URL="mysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?serverVersion=${DB_VERSION}&charset=utf8mb4"
###< Database Configuration ###

###> Redis Configuration ###  
# Redis connection settings
REDIS_HOST=redis                     # Use 'redis' for Docker, 'localhost' for local dev
REDIS_PORT=6379                      # Internal Redis port (don't change for Docker)
REDIS_PASSWORD=                      # Redis password (leave empty for no auth)

# Auto-constructed REDIS_URL (don't modify this line)
REDIS_URL="redis://${REDIS_HOST}:${REDIS_PORT}"
REDIS_CACHE_PREFIX="fund_transfer_"
###< Redis Configuration ###

###> Application Configuration ###
# Business rules - customize these for your requirements
DAILY_TRANSFER_LIMIT=100000.00       # Maximum daily transfer amount per account
SINGLE_TRANSFER_LIMIT=50000.00       # Maximum single transfer amount
MINIMUM_TRANSFER_AMOUNT=0.01         # Minimum transfer amount

# Security settings
API_RATE_LIMIT_PER_MINUTE=100        # API requests per minute per IP address
TRANSACTION_TIMEOUT_MINUTES=5        # Transfer operation timeout

# Development settings
LOG_LEVEL=debug                      # Logging level (debug/info/warning/error)
LOG_CHANNEL=app                      # Log channel name
###< Application Configuration ###

###> Monitoring & Performance ###
ENABLE_QUERY_LOGGING=true            # Enable database query logging
ENABLE_PERFORMANCE_MONITORING=true   # Enable performance monitoring
###< Monitoring & Performance ###

